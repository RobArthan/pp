=SML
fun €mk_fst› tm = (
let	val ttm = type_of tm;
	val (ta,tb) = dest_∏_type ttm;
in
	mk_app(mk_const("Fst", mk_≠_type(ttm,ta)), tm)
end);
fun €mk_snd› tm = (
let	val ttm = type_of tm;
	val (ta,tb) = dest_∏_type ttm;
in
	mk_app(mk_const("Snd", mk_≠_type(ttm,tb)), tm)
end);

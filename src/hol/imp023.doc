	val unit = declare_terminator "≥";
	val unit = declare_infix (40, "±");
	val unit = declare_terminator "±";
	val unit = declare_infix (30, "≤");
	val unit = declare_terminator "≤";

	fun define (keys, deflhs, defrhs) = (
		gen_new_spec(keys, asm_rule(mk_eq(mk_var(deflhs, type_of defrhs), defrhs)))
	);

in
	val €t_def› =
		define (["T","t_def"], "€T›",
			¨(Ãx:BOOL ∑ x) = (Ãx:BOOL ∑ x)Æ);

	val €µ_def› =
		define (["µ","µ_def"], "€µ›",
			¨ÃP:'a ≠ BOOL ∑ P = (Ãx ∑ T)Æ);

	val €∂_def› =
		define (["∂","∂_def"], "€∂›",
			¨ÃP:'a ≠ BOOL ∑ P ($≈ P)Æ);

	val €f_def› =
		define (["F","f_def"], "€F›",
			¨µ b:BOOL ∑ bÆ);

	val €≥_def› =
		define (["≥","≥_def"], "€≥›",
			¨Ãb:BOOL ∑ b ¥ FÆ);

	val €±_def› =

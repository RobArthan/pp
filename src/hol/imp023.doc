	val unit = declare_terminator "∂";
	val unit = declare_prefix (50, "≥");
	val unit = declare_terminator "≥";
	val unit = declare_infix (40, "±");
	val unit = declare_terminator "±";
	val unit = declare_infix (30, "≤");
	val unit = declare_terminator "≤";
in
	val €t_def› =
		simple_new_defn (["T","t_def"], "€T›",
			¨(Ãx:BOOL ∑ x) = (Ãx:BOOL ∑ x)Æ);

	val €µ_def› =
		simple_new_defn (["µ","µ_def"], "€µ›",
			¨ÃP:'a ≠ BOOL ∑ P = (Ãx ∑ T)Æ);

	val €∂_def› =
		simple_new_defn (["∂","∂_def"], "€∂›",
			¨ÃP:'a ≠ BOOL ∑ P ($≈ P)Æ);

	val €f_def› =
		simple_new_defn (["F","f_def"], "€F›",
			¨µ b:BOOL ∑ bÆ);

	val €≥_def› =
		simple_new_defn (["≥","≥_def"], "€≥›",
			¨Ãb:BOOL ∑ b ¥ FÆ);

	val €±_def› =
		simple_new_defn (["±","±_def"], "€±›",
		¨Ãb1 ∑ Ãb2 ∑ µb ∑ (b1 ¥ (b2 ¥ b)) ¥ bÆ);

	val €≤_def› =
		simple_new_defn (["≤","≤_def"], "€≤›",
		¨Ãb1 ∑ Ãb2 ∑ µb ∑ (b1 ¥ b) ¥ ((b2 ¥ b) ¥ b)Æ);

	val €one_one_def› =
		simple_new_defn (["OneOne","one_one_def"], "€OneOne›",
		¨Ãf:'a ≠ 'b ∑ µx1 ∑ µx2 ∑ (f x1 = f x2) ¥ (x1 = x2)Æ);

	val €onto_def› =
		simple_new_defn (["Onto","onto_def"], "€Onto›",
		¨Ãf:'a ≠ 'b ∑ µy ∑ ∂x ∑ y = f xÆ);

	val €type_defn_def› =
		simple_new_defn (["TypeDefn","type_defn_def"], "€TypeDefn›",
		¨ÃP ∑ Ãrep:'a ≠ 'b ∑  OneOne rep ± µx ∑ P x = ∂y ∑ x = rep yÆ);
end; (* of local ... in ... *)

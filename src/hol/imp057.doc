fun €times_conv_aux› (x : int) (y : int) = (
	case x of
		0 => µ_elim (mk_Ó y) times_0_x
	|	1 => µ_elim (mk_Ó y) times_1_x
	|	x =>
		if x mod 2 = 0
		then	let	val a = x div 2;
				val z = a * y;
				val u = z + z;
				val tmx = mk_Ó x;
				val tmy = mk_Ó y;
				val tma = mk_Ó a;
				val tmz = mk_Ó z;
				val tmu = mk_Ó u;

fun ‚list_variant· (av : TERM list) (tml: TERM list) : TERM list = (
let
	val av_vars = map (fst o dest_var) av
		handle complaint =>
		pass_on complaint "dest_var" "list_variant";

	val tm_vars = map dest_var tml
		handle complaint => 
		pass_on complaint "dest_var" "list_variant";
	
	fun aux avs ((s,ty) :: rest) = (
	let
		val s' = string_variant avs s;
	in
		(mk_var(s',ty) :: aux (s' :: avs) rest)	
	end

	| (icl'Var s, ty) => Var (s, ty)
	| (icl'Simpleç(str, tm), LãType(ty1, ty2)) => (
		Simpleç (typed(icl'Var str, ty1), typed(tm, ty2))
	) | _ => error "simple_dest_term" 3063 []

		(bvs : TERM list)
		(tm : TERM) 
		(Comb(f, a)) = (
			(tmfun bvs tm)
			handle (Fail _) =>
			mk_comb(aux bvs f (simple_dest_term f),
			aux bvs a (simple_dest_term a))

	(subs : (TERM * TERM) list)
	(tm : TERM) = (
	let	val (xs, ys) = split subs;
		val terms = tm :: (xs @ ys); 
		val Xs = mg_variables (map type_of ys) terms;
		val ysXs = combine ys Xs;
		fun aux bvs tm = (
			let	val (t, X) = find ysXs (fn (u, Y) => aconv u tm);

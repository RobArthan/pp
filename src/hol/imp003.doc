=SML
fun ‚variant· (vs : TERM list) (v : TERM) : TERM = (
let val (s, ty) = dest_var v
		handle complaint =>
		pass_on complaint "dest_var" "variant";
	val vss = map (fst o dest_var) vs
		handle complaint => 
		pass_on complaint "dest_var" "variant";	
in
	mk_var(string_variant vss s,ty)

%
% Macros for keyboard layout for use in the user documentation.
%
% There are two supplied example layouts. XppKeyboard3 and XppKeyboard4.
%
% \KEYBOARD draws a diagram of the XppKeyboard3 with the two to five
% characters each key can send drawn on each keytop.
% \KEYBOARDKEY draws a key to \KEYBOARD showing which shift keys
% produce which characters.
% \KEYBOARDTABLES produces tables with the extended characters
% in manageable groups showing the key-strokes to produce each character.
%
%
% Support register and macros:
%
=TEX
\newdimen\kbUNITWIDTH		% width of a standard key
\newdimen\kbUNITHEIGHT		% height of a standard key
\def\kbSS{\strut\hskip 2pt minus 1.7pt\relax}
\def\Key#1#2#3#4#5{{%
	\ShowAllImages
	\thinmuskip=0mu\medmuskip=0mu\thickmuskip=0mu%
	\vbox{%
		\hrule
		\hbox{%
			\vrule
			\vbox to \kbUNITHEIGHT{%
				\hbox to \kbUNITWIDTH{\kbSS#2 \hfil #3}%
				\vfill
				\hbox to \kbUNITWIDTH{\hfil #1 \hfil}%
				\vfill
				\hbox to \kbUNITWIDTH{\kbSS#4 \hfil #5}}
			\vrule}
		\hrule}\relax}}
% Call \Key with arguments to be positioned on the key caps as follows:
%	1:	Centre
%	2: 	Top left
%	3:	Top right 
%	4:	Bottom left
%	5:	Bottom right
%
% \KEYBOARD: draw a diagram of XppKeyboard3 layout
%
\def\KEYBOARD{%
\kbUNITHEIGHT=0.57in
\kbUNITWIDTH=0.41in
\vbox{
	\hbox{%
		\Key{1}{!}{Û}{°}{±}
		\Key{2}{@}{}{¿}{≤}
		\Key{3}{\#}{}{£}{≥}
		\Key{4}{\$}{}{§}{¥}
		\Key{5}{\%}{}{•}{µ}
 		\Key{6}{\^}{û}{ﬁ}{∂}
		\Key{7}{\&}{Ö}{¶}{∑}
		\Key{8}{*}{}{™}{∏}
		\Key{9}{(}{}{®}{π}
		\Key{0}{)}{}{©}{∞}
		\Key{$-$}{$\_$}{}{ﬂ}{≠}
		\Key{$=$}{$+$}{}{´}{Ω}}%
	\hbox{%
		\hskip 0.5\kbUNITWIDTH
		\Key{q}{Q}{ë}{—}{Ò}
		\Key{w}{W}{ó}{◊}{˜}
		\Key{e}{E}{}{≈}{à}
		\Key{r}{R}{í}{“}{Ú}
		\Key{t}{T}{î}{‘}{Ù}
		\Key{y}{Y}{ô}{Ÿ}{˘}
		\Key{u}{U}{ï}{’}{õ}
		\Key{i}{I}{â}{…}{È}
		\Key{o}{O}{è}{œ}{Ô}
		\Key{p}{P}{ê}{–}{}
		\Key{[}{\{}{õ}{˚}{€}
		\Key{]}{\}}{ù}{˝}{›}}%
	\hbox{%
		\hskip \kbUNITWIDTH
		\Key{a}{A}{Å}{¡}{·}
		\Key{s}{S}{ì}{”}{ˇ}
		\Key{d}{D}{Ñ}{ƒ}{â}
		\Key{f}{F}{Ü}{∆}{Ê}
		\Key{g}{G}{á}{«}{Á}
		\Key{h}{H}{à}{»}{Ë}
		\Key{j}{J}{ä}{ }{Í}
		\Key{k}{K}{ã}{À}{Î}
		\Key{l}{L}{å}{Ã}{Ï}
		\Key{;}{:}{É}{∫}{ª}
		\Key{'}{"}{}{¢}{ß}
		\Key{`}{\~{}}{†}{˛}{‡}}%
	\hbox{%
		\hskip 0.5\kbUNITWIDTH
		\Key{$\char'134$}{$\vert$}{ú}{¸}{‹}
		\Key{z}{Z}{ö}{⁄}{˙}
		\Key{x}{X}{ò}{ÿ}{}
		\Key{c}{C}{÷}{√}{Ä}
		\Key{v}{V}{‰}{Â}{„}
		\Key{b}{B}{Ç}{¬}{‚}
		\Key{n}{N}{é}{Œ}{Ó}
		\Key{m}{M}{ç}{Õ}{Ì}
		\Key{,}{$<$}{}{º}{¨}
		\Key{.}{$>$}{}{æ}{Æ}
		\Key{/}{?}{ñ}{ø}{Ø}}}} % End of \KEYBOARD
%
% \KEYBOARDKEY: draw a key to \KEYBOARD
%
\def\KEYBOARDKEY{%
\kbUNITHEIGHT=0.54in
\kbUNITWIDTH=2in
\hbox to \hsize{\hfill
	\hbox{\Key{key}{Shift+key}{Mod2+Shift+key}{Alt+key}{Mod2+key}}%
	\hfill}} % End of \KEYBOARDKEY





%
% Macros for keyboard layout for use in the user documentation.
%
% \KEYBOARD draws a diagram of a typical keyboard with the two to five
% characters each key can send drawn on each keytop.
% \KEYBOARDKEY draws a key to \KEYBOARD showing which shift keys
% produce which characters.
% \KEYBOARDTABLES produces tables with the extended characters
% in manageable groups showing the key-strokes to produce each character.
%
%
% Support register and macros:
%
=TEX
\newdimen\kbUNITWIDTH		% width of a standard key
\newdimen\kbUNITHEIGHT		% height of a standard key
\def\kbSS{\strut\hskip 2pt minus 1.7pt\relax}
\def\Key#1#2#3#4#5{{%
	\ShowAllImages
	\thinmuskip=0mu\medmuskip=0mu\thickmuskip=0mu%
	\vbox{%
		\hrule
		\hbox{%
			\vrule
			\vbox to \kbUNITHEIGHT{%
				\hbox to \kbUNITWIDTH{\kbSS#2 \hfil #3}%
				\vfill
				\hbox to \kbUNITWIDTH{\hfil #1 \hfil}%
				\vfill
				\hbox to \kbUNITWIDTH{\kbSS#4 \hfil #5}}
			\vrule}
		\hrule}\relax}}
% Call \Key with arguments as follows:
%	1:	key
%	2: 	Shift+key
%	3:	Meta+Shift+key 
%	4:	Alt+key
%	5:	Meta+key
%
%
% \KEYBOARD: draw a diagram of a typical keyboard.
%
\def\KEYBOARD{%
\kbUNITHEIGHT=0.54in
\kbUNITWIDTH=0.38in
\vbox{
	\hbox{%
		\Key{1}{!}{}{°}{±}
		\Key{2}{@}{}{¿}{≤}
		\Key{3}{\#}{}{£}{≥}
		\Key{4}{\$}{}{§}{¥}
		\Key{5}{\%}{}{•}{µ}
 		\Key{6}{\^}{û}{ﬁ}{∂}
		\Key{7}{\&}{}{¶}{∑}
		\Key{8}{*}{}{™}{∏}
		\Key{9}{(}{}{®}{π}
		\Key{0}{)}{}{©}{∞}
		\Key{$-$}{$\_$}{}{ﬂ}{≠}
		\Key{$=$}{$+$}{}{´}{Ω}}%
	\hbox{%
		\hskip 0.5\kbUNITWIDTH
		\Key{q}{Q}{ë}{—}{Ò}
		\Key{w}{W}{ó}{◊}{˜}
		\Key{e}{E}{}{≈}{à}
		\Key{r}{R}{í}{“}{Ú}
		\Key{t}{T}{î}{‘}{Ù}
		\Key{y}{Y}{ô}{Ÿ}{˘}
		\Key{u}{U}{ï}{’}{õ}
		\Key{i}{I}{â}{…}{È}
		\Key{o}{O}{è}{œ}{Ô}
		\Key{p}{P}{ê}{–}{}
		\Key{[}{\{}{õ}{˚}{€}
		\Key{]}{\}}{ù}{˝}{›}}%
	\hbox{%
		\hskip \kbUNITWIDTH
		\Key{a}{A}{Å}{¡}{·}
		\Key{s}{S}{ì}{”}{ˇ}
		\Key{d}{D}{Ñ}{ƒ}{â}
		\Key{f}{F}{Ü}{∆}{Ê}
		\Key{g}{G}{á}{«}{Á}
		\Key{h}{H}{à}{»}{Ë}
		\Key{j}{J}{ä}{ }{Í}
		\Key{k}{K}{ã}{À}{Î}
		\Key{l}{L}{å}{Ã}{}
		\Key{;}{:}{}{∫}{ª}
		\Key{'}{"}{}{¢}{ß}
		\Key{`}{\~{}}{†}{˛}{‡}}%
	\hbox{%
		\hskip 0.5\kbUNITWIDTH
		\Key{$\char'134$}{$\vert$}{ú}{¸}{‹}
		\Key{z}{Z}{ö}{⁄}{˙}
		\Key{x}{X}{ò}{ÿ}{}
		\Key{c}{C}{}{√}{Ä}
		\Key{v}{V}{‰}{Â}{„}
		\Key{b}{B}{Ç}{¬}{‚}
		\Key{n}{N}{é}{Œ}{Ó}
		\Key{m}{M}{ç}{Õ}{Ì}
		\Key{,}{$<$}{}{º}{¨}
		\Key{.}{$>$}{}{æ}{Æ}
		\Key{/}{?}{}{}{Ø}}}} % End of \KEYBOARD
%
% \KEYBOARDKEY: draw a key to \KEYBOARD
%
\def\KEYBOARDKEY{%
\kbUNITHEIGHT=0.54in
\kbUNITWIDTH=2in
\hbox to \hsize{\hfill
	\hbox{\Key{key}{Shift+key}{Meta+Shift+key}{Alt+key}{Meta+key}}%
	\hfill}} % End of \KEYBOARDKEY

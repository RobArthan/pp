fun Ûprint_zerrorİ ((FailedZTm (term, env, details)) : ERROR_INFO) = (
	report 62001 [format_ztm term];
	(case details of
	Failed§¢ (tml, tyl) => (
		print_zerr§¢ tml tyl
	) | FailedSetd (tml, tyl) => (
		print_zerrsetd tml tyl

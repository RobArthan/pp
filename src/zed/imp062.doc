=SML
fun Ûchartupleİ ((decls, tm) : Z_SCH_TEXT) : Z_TM = (
let	fun f (ZDec(ids, tm)) = (
		map (fn id => ZTmLVar(id,[])) ids
	) | f (ZSchemaDec (ZTmDecor (tm1, d))) = (
		[ZTmÊ(tm1, d)]
	) | f (ZSchemaDec tm1) = (
		[ZTmÊ(tm1, "")]
	);
in
	case decls of
	[] => error "chartuple" 62998 [fn()=>"empty declaration"]
	|[decl] => (case f decl of
			[tm] => tm
			|tms => ZTmTuple tms)
	|decls => ZTmTuple(flat (map f decls)
	)
end);
=TEX


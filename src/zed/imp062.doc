fun Ûti_zdecİ (env : ZENV) (zdec as ZDec (ids, tm): Z_DEC) : Z_DEC * ZENV * IDENT list = (
let	val (tm', ty') = ti_ztm env tm;
	val uty = ExVartype(Unknown (next_name()));
	val side = unify zti_subs (ty', ExType("ğ",[uty]))
		handle Fail msg =>

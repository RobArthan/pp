	|	((true,ExType("­",[domty,ranty])),[],_) => 
			let	val (bnam,gentyl) = (	case domty of ExType(b,l) => (b,l)
							| _ => scream "ti_Ztgvar" "Bad generic constant")
				val ztml' = map (fn x => Ztgvar(("U",""),[])) gentyl

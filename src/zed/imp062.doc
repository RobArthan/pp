fun 	Ûmanifestİ (ty:EXTYPE) : MANIFEST_EXTYPE = (
	case ty of

	ExType("ğ",[ty']) => (
	   	SchemaType (unbind_extype ty')
		handle Fail msg => NotManifest

	)|ExType(_,_) => (
		BindingType (unbind_extype ty)
		handle Fail msg => NotManifest
	)|_ => NotManifest

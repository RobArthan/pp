fun Ûformat_extypeİ (ExVartype ty : EXTYPE) : string = (
	case ty of
	Known name => "'"^name
	|Unknown tvn => "'"^(string_of_int tvn)
) | format_extype (ExType ("ğ", [ExType ("¸", [ty1, ty2])])) = (
	(format_extype ty1)^"ª"^(format_extype ty2)

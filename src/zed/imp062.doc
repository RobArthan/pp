=SML
fun Ûchartupleİ ((decls, tm) : ZSCHTEXT) : ZTM = (
let	fun f (ZdDec(ids, tm)) = (
		map (fn id => Ztlvar(id, Nil,[])) ids
	) | f (ZdDecsexp(tm1, d)) = [ZtÊ(tm1, d)];
in
	case decls of
	[] => error "chartuple" 62998 [fn()=>"empty declaration"]
	|[decl] => (case f decl of
			[tm] => tm
			|tms => Zttuple tms)
	|decls => Zttuple(flat (map f decls)
	)
end);

\section{RECOGNIZING Z PARAGRAPHS}
=TEX
\subsection{Z Axiomatic Box Recogniser}
=SML
fun Ûz_axbox_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
let	val side_effect =
		if	is_same_symbol(start, "¹")
			andalso	is_same_symbol(finish, "°")
			andalso	(lang = "ZAX")
		then	()
		else
			fail "z_axbox_recogniser" 49001 [
				fn () => start,
				fn () => lang,
				fn () => finish]
	val tokens = ZTAx::(zlex value);
	val parsed = zparser {is_quot = false, standard = true} tokens;
(*	val type_checked = (
		case type_check_zparagraph parsed of
		Inferred _ => (print "OK";())
		|TypeError e => print_ztierror e
		);*)
in	parsed
end);


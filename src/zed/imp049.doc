\section{PARSING Z PARAGRAPHS}
\subsection{The $ZParagraph$ Datatype}
=SML

datatype ÛZPARAGRAPHÝ	= ZPAbbDef of IDENT * ZOPCLASS * (IDENT list) * ZTM
			| ZPAxDes of IDENT list * ZSCHTEXT
			| ZPGivens of (IDENT list)
			| ZPConstraint of (IDENT list * ZTM)
			| ZPFreeType of IDENT * (IDENT * (ZTM OPT)) list;
=TEX
\subsection{The Parsing Functions}
\subsubsection{Identifiers}
=SML
fun Ûparse_identsÝ ((HTLsqbrack::more) : HOL_TOKEN list) = (
let	fun aux res (HTRsqbrack :: more) = (res, more)
	|   aux res (HTName name :: more) = aux (res@[name]) more
	|   aux res (HTInOp{name=",", ...}:: more) = aux res more
	|   aux res _ = fail "parse_idents" 49070 [];
in	aux [] more
end
) | parse_idents htl = ([], htl);

=TEX
\subsubsection{Axiomatic Boxes}

=SML
fun Ûparse_axboxÝ (tokens : HOL_TOKEN list) = (
let	val (params, rest) = parse_idents tokens;
in	(params, parse_z_schtext rest)
end
);
=TEX
\subsubsection{Schema Boxes}
=SML
fun Ûparse_schboxÝ (HTName name :: more : HOL_TOKEN list) = (
let	val (params, rest) = parse_idents more;
in	(name, ZNormal, params, parse_z_term rest)
end
) | parse_schbox _ = fail "parse_schbox" 49040 [];
=TEX
\subsubsection{Abbreviations}
=SML

fun Ûparse_abbreviationÝ (tokens : HOL_TOKEN list) = (
let
	fun aux branch (HTInOp{name="=",...} :: rest) =
		(branch, rest)
	  | aux branch (next :: more) = aux (branch@[next]) more
	  | aux branch _ = fail "parse" 49020 [];
	fun aux1 (HTInOp{name="=",...} :: rest) =
		rest
	  | aux1 _ = fail "parse" 49020 [];
	val (lhs, rest) = aux [] tokens;
	val (name, zop, params) = parse_deflhs lhs;
	val rest = aux1 rest;
in
	(name, zop, params, parse_z_term rest)
end
);
=TEX
\subsubsection{Horizontal Schema Definitions}
=SML
fun Ûparse_horiz_schemaÝ (tokens : HOL_TOKEN list) = (
let
	fun aux branch (HTName "¦" :: rest) =
		(branch, rest)
	  | aux branch (next :: more) = aux (branch@[next]) more
	  | aux branch _ = fail "parse" 49030 [];
	val (lhs, rest) = aux [] tokens;
	val (name, zop, params) = parse_deflhs lhs;
in
	(name, zop, params, parse_z_term rest)
end
);
=TEX
\subsubsection{Free Type Definitions}
=SML
fun Ûparse_free_type_rhsÝ (toks : HOL_TOKEN list) : (IDENT * (ZTM OPT)) list = (
let
	fun aux2 (HTName "¢¢" :: rest) = rest
	  | aux2 _ = fail "parse_free_type" 49040 [];
	fun aux1 (HTName name :: HTName "§§" :: more) = (
	let 	val (rest, ztm) = pparse_z_term more;
		val rest' = aux2 rest;
	in	((name,  Value ztm), rest')
	end	handle X => fail "parse1" 49040 []
	) | aux1 (HTName name :: more) = (
		((name, Nil), more)
	) | aux1 _ = fail "parse2" 49040 [];
	fun dorest (HTVert :: more) = (
	let	val (this, rest) = aux1 more
	in	this :: dorest rest
	end
	) | dorest [HTEos] = []
	| dorest _ = fail "parse3" 49040 [];
	val (first, more) = aux1 toks;
in	first :: dorest more
end
);
=TEX
=SML
fun Ûparse_free_typeÝ (HTName lhs :: HTColon :: HTColon ::
	(HTInOp {name = "=", ...}) :: more) = (
	(lhs, parse_free_type_rhs more)
)
  | parse_free_type _ = fail "parse4" 49040 [];
=TEX
\subsubsection{Given Sets}
=SML
fun Ûparse_given_setsÝ ((HTLsqbrack::more) : HOL_TOKEN list) : IDENT list = (
let	fun aux res [HTRsqbrack, HTEos] = res
	|   aux res (HTName name :: more) = aux (res@[name]) more
	|   aux res (HTInOp{name=",", ...}:: more) = aux res more
	|   aux res _ = fail "parse" 49010 [];
in	aux [] more
end
) | parse_given_sets _ = fail "parse" 49010 [];
=TEX
\section{Z PARAGRAPH RECOGNISERS}
\subsection{Z Axiomatic Box Recogniser}
=SML
fun Ûz_axbox_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "¹")
	andalso	is_same_symbol(finish, "°")
	andalso	(lang = "ZAX")
	then
		(ZPAxDes (parse_axbox((lex (get_current_terminators())
			get_fixity) value)))
	else
		fail "z_axbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Generic Box Recogniser}
=SML
fun Ûz_genbox_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "StartZGeneric")
	andalso	is_same_symbol(finish, "EndZBox")
	andalso	(lang = "")
	then
		(ZPAxDes (parse_axbox((lex (get_current_terminators())
			get_fixity) value)))
	else
		fail "z_genbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Schema Box Recogniser}
=SML
fun Ûz_schbox_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "StartZSchema")
	andalso	is_same_symbol(finish, "EndZBox")
	andalso	(lang = "")
	then
		ZPAbbDef(parse_schbox (
			(lex (get_current_terminators())
			get_fixity) value))
	else
		fail "z_schbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Term Recogniser}
=SML
fun Ûz_term_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
	if (is_same_symbol(start, "StartZTerm")
		andalso	is_same_symbol(finish, ">")
		andalso	(lang = ""))
	then
		(
		lex (get_current_terminators()) get_fixity) value
	else
		fail "z_term_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z General Text Recogniser}
=SML
datatype PARATYPE =	GivenSet | FreeType | Abbreviation |
			HorizSchema | Constraint | Other;
=TEX
=SML
fun Ûparagraph_typeÝ (HTLsqbrack::more) : PARATYPE = (
let	fun aux (HTEos :: more) = GivenSet
	  | aux _ = Constraint;
	fun aux1 (HTRsqbrack :: more) = aux more
	  | aux1 (other :: more) = aux1 more
	  | aux1 [] = GivenSet
in aux1 more end
) | paragraph_type (HTColon :: HTColon ::
	(HTInOp {name = "=",...}) :: more) = FreeType
  | paragraph_type (HTInOp{name="=",...} ::
	HTInOp{name="=",...} :: more) = Abbreviation
  | paragraph_type (HTName "¦" :: rest) = HorizSchema
  | paragraph_type (HTEos :: more) = Constraint
  | paragraph_type (any :: more) = paragraph_type more
  | paragraph_type [] = Other;
=TEX

=SML
val x : HOL_TOKEN list ref = ref [];
fun Ûz_other_recogniserÝ (start:string, lang:string, value:INPUT list, finish:string) = (
let	val sd = if (is_same_symbol(start, "¹") andalso is_same_symbol(finish, "°")
				andalso	(lang = "Z"))
		then ()
		else fail "z_other_recogniser" 22010
			[fn () => start, fn () => lang, fn () => finish];
	val tokens = (lex (get_current_terminators()) get_fixity) value;
	val sd = (x := tokens);
in
	(case paragraph_type tokens of
	GivenSet =>
		ZPGivens (parse_given_sets tokens)
	|FreeType =>
		ZPFreeType (parse_free_type tokens)
	|Abbreviation =>
		ZPAbbDef (parse_abbreviation tokens)
	|HorizSchema =>
		ZPAbbDef (parse_horiz_schema tokens)
	|Constraint => (
		let val (gen, rest) = parse_idents tokens;
		in
			ZPConstraint (gen, parse_z_term rest)
		end)
	|Other => fail "parse" 49060 [])
end);


\section{RECOGNIZING Z PARAGRAPHS}
\subsection{Z Axiomatic Box Recogniser}
=SML
fun z_axbox_recogniser (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "")
	andalso	is_same_symbol(finish, "")
	andalso	(lang = "ZAX")
	then
		(parse_zparagraph(HTName "AxBox"::((lex (get_current_terminators())
			get_fixity) value)))
	else
		fail "z_axbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Generic Box Recogniser}
=SML
fun z_genbox_recogniser (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "StartZGeneric")
	andalso	is_same_symbol(finish, "EndZBox")
	andalso	(lang = "")
	then
		(parse_zparagraph (HTName "GenBox"::((lex (get_current_terminators())
			get_fixity) value)))
	else
		fail "z_genbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Schema Box Recogniser}
=SML
fun z_schbox_recogniser (start:string, lang:string, value:INPUT list, finish:string) = (
	if	is_same_symbol(start, "StartZSchema")
	andalso	is_same_symbol(finish, "EndZBox")
	andalso	(lang = "")
	then
		(parse_zparagraph (HTName "SchBox"::
			(lex (get_current_terminators())
			get_fixity) value))
	else
		fail "z_schbox_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z Term Recogniser}
=SML
fun z_term_recogniser (start:string, lang:string, value:INPUT list, finish:string) = (
	if (is_same_symbol(start, "StartZTerm")
		andalso	is_same_symbol(finish, ">")
		andalso	(lang = ""))
	then
		(parse_zparagraph (HTName "ZTerm"::(
		lex (get_current_terminators()) get_fixity) value))
	else
		fail "z_term_recogniser" 22010 [fn () => start, fn () => lang, fn () => finish]
);
=TEX
\subsection{Z General Text Recogniser}
=SML
fun z_other_recogniser (start:string, lang:string, value:INPUT list, finish:string) = (
let	val sd = if (is_same_symbol(start, "") andalso is_same_symbol(finish, "")
				andalso	(lang = "Z"))
		then ()
		else fail "z_other_recogniser" 22010
			[fn () => start, fn () => lang, fn () => finish];
	val tokens = (lex (get_current_terminators()) get_fixity) value;
in
	parse_zparagraph tokens
end);

end (* local ... in *);


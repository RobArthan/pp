and €gen_zschtext› (phi : SUBS) (sch as (dec, Value pred, Value ty) : Z_SCH_TEXT) : (TERM * TERM OPT) = (
	(list_gen_zdec phi dec, Value (gen_hol_term phi pred))
) | gen_zschtext phi (dec, _, _) = (
	(list_gen_zdec phi dec, Nil)
) 

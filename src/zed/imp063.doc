		fail "terms_in_zinferred" 63001 []
	) | aux (ZParaAxDes (_, sch as (dec, Value pred, _), _)) = (
		gen_hol_term phi pred
	) | aux (ZParaAxDes (_, (_, Nil, _), _)) = (
		fail "terms_in_zinferred" 63002 []

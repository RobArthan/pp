fun €term_of_z_dec› (dec : Z_DEC) : TERM = (
	case dec of
	ZDec (idl, tm, Value ty) =>
		let	val set = term_of_z_tm tm;
			val vars = map (fn id =>
				mk_z_lvar (string_of_ident id, type_of_z_extype ty, [])) idl;
		in
			mk_z_dec (vars, set)
		end
	|ZDec (_, _, Nil) =>
		fail "term_of_z_dec" 63000 []
	|ZSchemaDec (tm, _) =>
		mk_z_decsexp (term_of_z_tm tm, "")
)
=TEX

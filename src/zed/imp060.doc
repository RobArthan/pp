fun Ûrec_subscriptÝ (st : LEX_STATE) : LEX_STATE = (
let	fun aux2 st =
		if next is_digit st
		then aux2 (collect st)
		else st;
	fun aux1 st = (
		if next is_superscriptor st
		then fail "Z Lexical Analyser" 60007 []
		else if next is_macro st
		then rec_keyword st
		else if next is_alpha st
		then rec_atoms st

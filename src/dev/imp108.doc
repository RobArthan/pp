fun stream_of_string (s : string) : TextIO.instream = (
let
	val chs : char list ref = ref (explode s);
	fun next _ = (
		case !chs of
			ch :: more => (chs := more; SOME ch)
		|	[] => NONE
	);
	val reader = mk_text_reader("stream_of_string", next, NONE);
	val strm = TextIO.mkInstream
			(TextIO.StreamIO.mkInstream(reader, NONE));
in
	strm
end
);

exception Fail of string;

exception GiveUpReader;

fun use_filter (
	name : string,
	f : char -> char option,
	isopt : TextIO.instream option) = (
	let	fun file_stream (SOME is) = (
			case TextIO.input1 is of
				NONE => NONE
			|	SOME c => f c
		) | file_stream NONE = NONE;
		val reader = mk_text_reader("<test>", file_stream, isopt);
		val strm = TextIO.mkInstream
			(TextIO.StreamIO.mkInstream(reader, NONE));
		fun go () = (
			Compiler.Interact.useStream strm
			handle ex => (
				case ex of	
					GiveUpReader => (
						print "Ok, giving up\n"
					) | Fail msg => (
						print "Fail: ";
						print (msg);
						print "\n";
						go()
					) | _ => (
						print "Exception: ";
						print (exnName ex);
						print " ";
						print (exnMessage ex);
						print "\n";
						go()
					)
			)
		);
	in	go()
	end
);

fun silly #"q" = SOME #"Q" | silly c = SOME c;

use_filter ("<test>", silly, SOME TextIO.stdIn);



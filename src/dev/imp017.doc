fun ‚format_reducer· (body : string) (n : int) : string = (
	let	val is = map string_of_int(rev (interval 1 n));
		fun do1 i = "x" ^ i;
		val xs = format_list do1 is "::";
	in	if n = 0
		then
	"(fn _ =>" ^ body ^ ")"
		else
	"(fn(" ^ xs ^ "::_)=>" ^ body ^ "|_=>raise PARSER_ERROR\"invalid reduction\")"
	end
);

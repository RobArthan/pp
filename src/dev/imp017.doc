=TEX
=SML
fun ‚open_outfile· (file : string) : unit = (
	(if file <> ""
	then out_file := open_out file
	else raise SLRP_ERROR "an empty filename is not allowed for the output file")
	handle Io msg =>
	raise SLRP_ERROR("i/o failure on output file: " ^ file ^ " (" ^ msg ^ ")")
);

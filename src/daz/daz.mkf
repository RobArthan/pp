	cp daz.$(HEAP_SUFFIX) "$(RELDIR)"/db
ifeq ($(PPXMOTIF), y)
	cp $(XDAZDB) "$(RELDIR)"/db
endif
	chmod -R a-w "$(RELDIR)"
	chmod -R g-w "$(RELDIR)"
	chmod -R u+w "$(RELDIR)"

build:	dazbuilt.ldd \
	$(SIEVEVIEW) Xpp.ad $(BITMAPFILES)

docrel:	docdir $(RELEASEDOCCONTENTS)

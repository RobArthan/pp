%.ldd: %.sml
	@rm -f $@ $*.err 2>/dev/null
	@echo "Compiling (code)" $<
	@if test `ls -s $(DAZDB) | awk '{print $$1}'` -ge 50000;\
	then $(DBGC) $(DBGCARG) $(DAZDB) >$*.discgarb.ldd;\
	fi
	@pp -d ./daz -f $< -- $(MLFLAGS) >$*.err
	@mv $*.err $@

%.ttd: %.sml $(TESTDB)
	@rm -f $@ $.err 2>/dev/null
	@echo "Compiling (test)" $<
	- pp -d ./$(TESTDB) -f $< -n -- $(MLFLAGS) >$*.err
	@mv $*.err $@


	XppDazTemplates $(BITMAPFILES)
	cp XppDazTemplates "$(RELDIR)"/app-defaults
	( cd "$(RELDIR)"/app-defaults; \
	  rm -f XppTemplates; \
	  ln -s XppDazTemplates XppTemplates )
	cp $(BITMAPFILES) "$(RELDIR)"/bitmaps
	cp $(DAZBIB) "$(RELDIR)"/tex
	chmod -R a-w "$(RELDIR)"
	chmod -R g-w "$(RELDIR)"
	chmod -R u+w "$(RELDIR)"


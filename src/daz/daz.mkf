%.dvi: %.tex $(DAZBIB) $(FMUBIB) $(HATBIB)
	texdvi $* > $*.dvi.ldd1 </dev/null
	- bibtex $*
	texdvi $* > $*.dvi.ldd2 </dev/null
	texdvi $*

%.ldd: %.sml
	@rm -f $@ $*.err 2>/dev/null
	@echo "Compiling (code)" $<
	@if test `ls -s $(DAZDB) | awk '{print $$1}'` -ge 50000;\
	then $(DBGC) $(DBGCARG) -c $(DAZDB) >$*.discgarb.ldd;\
	fi
	@pp -d ./daz -f $< -- $(MLFLAGS) >$*.err
	@mv $*.err $@

%.ttd: %.sml $(TESTTOOLS)
	@rm -f $@ $.err 2>/dev/null
	@echo "Compiling (test)" $<
	- pp -d ./$(DAZDB) -f $< -n -- $(MLFLAGS) >$*.err
	@mv $*.err $@

%.sml: %.doc  $(SIEVEVIEW)
	docsml -f $(SIEVEVIEW)  $<

%.tch: %.doc  dtd035.sml imp035.sml
	doctch $*

%.tex: %.doc $(SIEVEVIEW)
	doctex -f $(SIEVEVIEW) $<

%.zed: %.doc $(SIEVEVIEW)
	sieve -f $(SIEVEVIEW) zed < $< >$*.zed

%.doc: %.src  qqspec.svf extract_z_para dtdidx.zed tktidx.zed
	sieve -f qqspec.svf spcdoc < $< >$*.doc

$(DOCFILES:.doc=) : $$@.tex
	texdvi $@



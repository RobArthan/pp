begin
 LO := 0;
 HI := X + 1;
 while LO +1 /= HI
 loop
 „ MID, LO, HI [LO ** 2 ¼ X < HI ** 2, LO ** 2 ¼ X < HI ** 2]	(4)
 end loop;
 return LO;
end SQRT;

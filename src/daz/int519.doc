a(pure_rewrite_tac((map z_get_spec o flat o map get_consts) ["Aspec", "Bspec", "Cspec"]));
a(REPEAT strip_tac);
store_mt_results
(mt_runf (op =$))
 [("r1.10.3", snd o dest_thm o pop_thm , (), get_conjecture"-""vcDbody_3")];
=TEX

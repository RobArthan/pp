\subsection{Sequents}
=SML
fun (h : Z_PRED list) Ù (c : Z_PRED) : SEQUENT = (h, c);

fun (h : Z_PRED) %Longrightarrow% (s : SEQUENT list) : SEQUENT list = (
	map (fn (h', c) => (h :: h', c)) s
);
=TEX

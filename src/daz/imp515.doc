val var_info : (ID * (TYPE * ENV_INFO)) list ref = ref [];

val ÛenvÝ = (fn id =>
	case get_const_info ("z'"^id) of
	Value (ty,_) => (
		Value (ty, EIEnvOther)
	)|Nil => lassoc5 (!var_info) id
);

fun Ûextend_envÝ (id : ID) (ty : TYPE) (envty : ENV_INFO) = (
	(var_info := (id,(ty, envty))::(!var_info))
);

fun Ûchange_envÝ (id : ID) (envty : ENV_INFO) = (
	case lassoc3(!var_info) id of
	(ty, _) => (var_info := (id, (ty, envty))::(!var_info))
);
=TEX

=SML
fun Ûupdate_db_with_parainfoÝ (p : PARAINFO) : unit = (
let	val iw = get_flag"ignore_warnings";
	val side = set_flag("ignore_warnings", true);
	fun do_const(s, tm) =
	let	val side = delete_const(mk_const ("z'"^s, type_of tm))
			handle _ => (set_flag("ignore_warnings", iw);());
		val side = extend_env s (type_of tm) EIEnvOther;
		val side = new_const("z'"^s, type_of tm);
		val side = set_flag("ignore_warnings", iw);
	in () end;
	fun do_ty (tc, i) =
	let	val side = delete_type tc handle _ => ();
		val side = (new_type (tc, i);()) handle _ => ();
	in () end;
in
	case p of
	AbbDefInfo (s, _, tm) => (map do_ty (type_tycons (type_of tm));
					do_const (s, tm))
	|_ => ()
end
);
=TEX
=SML
fun Ûupdate_env_with_varsÝ ({vars, tmark} : VAR_DECL) : unit = (
let	val vars' = map to_upper vars;
	val tmark' = to_upper tmark;
	val ty = case env tmark' of
				Value (ty, _) => dest_z_power_type ty
				|_ => fail "" 505001 [fn()=>tmark^" not declared"];
in
	((map (fn s => extend_env s ty (EIEnvVar tmark')) vars');())
end
);
=TEX

=SML
fun Ûcn_declareÝ (s : string) : unit = (
	case cn_basic_decl_of_string s of
	BDVarDecl vd => (
		update_env_with_vars vd
	)| bd => (
		let	val paras = trans_basic_decl env bd;
			val side = map update_db_with_parainfo paras;
		in
			()
		end
	)
);
=TEX


\section{LITERATE SCRIPT 1}

=SML
new_script {name="int505A", state=initial_cn_state};
=TEX

¹CN
procedure MAIN is
   subtype SUB is INTEGER range 1 .. 1;
   type ARR is array (SUB) of INTEGER;
   A, B : ARR;
   procedure P(X : in INTEGER; Y : out INTEGER)
   „ Y [Y = B(X) + 7]
   is
   begin
      Y := B(X) + 7;
   end P;
begin
   „ A [B(1) = 29]
end MAIN;
°
=SML
fun alias_1 () =
¹CN
Ã A(1) := 1;
   B(1) := 2;
   P(A(1), B(A(1)));
°

=SML
store_mt_results mt_run_fail [
	("alias.1", alias_1, (), gen_fail_msg "check_1_a" 505064 ["A", "B"])
];
val int505A_state = get_cn_state();
=TEX


    ˜ [true, PLUS_ONE(X) = X + 1]

   is
      L : INTEGER;

        § procedure PLUS_FOUR body ¢				(4)

   begin

        „ L [true, PLUS_ONE(X) = X + 1]			(5)

   end PLUS_ONE;
end PACK_P;

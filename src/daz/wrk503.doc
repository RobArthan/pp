   begin
      return L + 2;
   end PLUS_TWO;
   procedure SQRT (X : INTEGER; Y : out INTEGER)

    „ Y [X ¾ 0, Y ** 2 ¼ X < (Y + 1) ** 2]

   is separate;
   procedure CUBE_ROOT (N : in out INTEGER)

    „ N, J [N ¾ 0, N ** 3 ¼ N‰0 < (N + 1) ** 3]

   is
      L : INTEGER;
   begin

      „ N, J, L [N ¾ 0, N ** 3 ¼ N‰0 < (N + 1) ** 3]	(2)

      L := PLUS_TWO(L);
   end CUBE_ROOT;

   § function NEXT_COLOUR body ¢				(3)


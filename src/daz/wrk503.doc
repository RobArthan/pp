new_script {name="MAIN", unit_type="proc"};

=TEX

¹CN
§ main procedure ¢		(2)
°
¹CN
(2) é

with PACK_P;
procedure MAIN is
   C : PACK_P.COLOUR;
   type PERSON is
   record
      AGE : INTEGER;
      EYES : PACK_P.COLOUR;
   end record;
   JACK : PERSON;
begin
      PACK_P.CUBE_ROOT(PACK_P.I);

       „ C, JACK [true, C = PACK_PoRED]

      C := PACK_P.BLUE;
end MAIN;

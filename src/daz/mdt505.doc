fun Ûsimple_speclabÝ (pre : Z_PRED, post : Z_PRED) : SPECLAB = (
let	val dummy_wp_env : WP_ENV = {
		fun_header = {name = "informal_fun",
			formal_pars = [], return_type = "result_type"},
		return = ñtrue®,
		till = ñtrue®,
		formal_procs = [],
		env = env
		};
	fun is_ivar_name n = (
		implode (rev(rev (explode n) to 1)) = "‰0"
	);
	fun name_stem n = (
		if	is_ivar_name n
		then	implode (rev(rev (explode n) from 2))
		else	n
	);
	val ns = map (fst o dest_var)(frees pre @ frees post);
	val w = map name_stem ns cup [];
	val w0 = map (fn n => n ^ "‰0") w;
in	{spec = {pre = pre, post = post, w = w, w0 = w0, label=LImplicit},
		formal_body_flag = false,
		fun_flag = false,
		till_flag = false,
		wp_env = dummy_wp_env,
		in_scope = {
			vc_vars = [], vc_pars = [], vc_log_cons = [],
			formal_procs = [], dec_labels = []
		}
	}
end
);


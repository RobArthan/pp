fun €terms_of_vcs›
	(sl : SPECLAB)
	(acc : TERM list)
	(gs_pre_post :  Z_ID list OPT * TERM * TERM)
	(vc as (decs, (asms, conc)) :: more : VC list) : TERM list = (
	let	val tm = (
		case (decs, asms) of
			([], []) => conc
		|	([], _) => mk_z_¥ (list_mk_± asms, conc)
		|	(_, []) => mk_z_µ(mk_z_decl decs, mk_z_true, conc)
		|	(_, _) => mk_z_µ(mk_z_decl decs, list_mk_± asms, conc));
		val recur = terms_of_vcs sl;
	in	recur (tm :: acc) gs_pre_post more
	end
) | terms_of_vcs sl acc (globals, pre, post) [] = (
	let	val all_error_frees = list_term_union (map frees acc);
	in	case all_error_frees of
			[] => rev acc
		|	_ => 
		let	fun ada_id v = (
				case  #env(#wp_env sl) (fst(dest_var v)) of
				Value {info = EIEnvAuxVar _, ...} => false
			|	Value {info = EIEnvLogCon _, ...} => false
			|	Value _ => true
			|	Nil => false
			);
			fun opt_s [_] () = ""
			|  opt_s _ () = "s";
			fun is_are [_] () = "is"
			|  is_are _ () = "are";
			val pre_frees = frees pre;
			val post_frees = frees post;
			val pre_post_frees = pre_frees term_union post_frees;
			val other_error_frees = all_error_frees term_diff pre_post_frees;
			val pre_post_error_frees = all_error_frees term_diff other_error_frees;
			val post_error_frees = pre_post_error_frees term_diff pre_frees;
			val pre_error_frees = pre_post_error_frees term_diff post_error_frees;
			fun  report number (term, vars) = (
				let val svars = Sort.sort term_order vars;
					val (badvs, offset) =
					case svars drop ada_id of
						[] => (svars, 0)
					|	some => (some, 1);
				in
					fail "call_vcs" number
					[ fn () => string_of_term term,
					 (fn () => format_list string_of_term badvs ", "),
					 opt_s svars,
					 is_are svars]
				end
			);
		in	case post_error_frees of
				_::_ =>  report 507121 (post, post_error_frees)
			|	[] =>  (
				case pre_error_frees of
					_::_ => (
					report 507123 (pre, pre_error_frees)
				) |	[] =>  (
					map (report 507125)
					(map (fn t => (t, frees t)) (rev acc)
						drop (fn(_, vs) => is_nil vs))
				)
			)
		end
	end
);

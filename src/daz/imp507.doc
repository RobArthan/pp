		then	rev(get_consts spec_script_thy) drop (not o is_const_in_package newids)
		else	rev(get_consts spec_script_thy);
	val iconst_thms = map (fn x => (x, (Value (get_spec x)
					handle Fail _=> Nil))) 
				iconsts;
	val type_names = mapfilter (unbind_gvar_name o fst o dest_ctype) itypes;
	val pfxd_names = map (prefix_package_id ident newids) type_names;
	val tysubs = (combine pfxd_names type_names) drop (fn (x,y) => (x = y));
	val _ = open_theory target_thy;
	val dummyfixities = map 
		(fn (c, t) => ZUserInterfaceSupport.set_zfixity_info(c, [t]))
		ifixities;
	fun do_type  (ty : TYPE) = (
	let 	val (s,args) = dest_ctype ty;
		val n = length args;
		val prefixed_s = rassoc1 tysubs s
	in
		new_type(prefixed_s, n)
	end);
	fun get_const_name t = (
		let	val (n, _, _) = dest_z_gvar t;
		in	n
		end
	);
	val const_names = map get_const_name iconsts;
	val ptypes = map do_type itypes;
	val _ = store_prefix_const_thms ident tysubs newids
		iconst_thms;
	fun prefix_type_opt Nil = Nil
	|   prefix_type_opt (Value ty) = Value (type_map do_type ty);
	fun prefix_env_entries acc (zn::more) = (
		case current_cn_env zn of
			ei as (Value {tipe, canon_name, info}) => (
				case info of
					EIEnvConstant {tmark} => (
					prefix_env_entries
					((prefix_package_id ident newids zn,
					{	tipe = prefix_type_opt tipe,
						canon_name = prefix_package_id ident newids canon_name,
						info = EIEnvConstant{tmark = prefix_package_id ident newids tmark}})::acc) more
				) | 	EIEnvRecordType rec_ty_inf => (
					prefix_env_entries
					((prefix_package_id ident newids zn,
					{	tipe = prefix_type_opt tipe,
						canon_name = prefix_package_id ident newids canon_name,
						info = info})::acc) more
				) | 	EIEnvOtherType  => (
					prefix_env_entries
					((prefix_package_id ident newids zn,
					{	tipe = prefix_type_opt tipe,
						canon_name = prefix_package_id ident newids canon_name,
						info = info})::acc) more			
				) | 	_ => (
					prefix_env_entries acc more
				)
		) |	Nil => prefix_env_entries acc more
	) | prefix_env_entries acc [] = acc;
	val _ = open_theory old_thy;
in
	(tysubs, prefix_env_entries (prefix_env_entries [] type_names) const_names)
end);
=TEX


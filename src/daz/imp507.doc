fun €undot› (name : string) : string list = (
	let	fun aux acc [] = rev(map (implode o rev) acc)
		|   aux acc ("." :: more) = aux ([]::acc) more
		|   aux acc ("o" :: more) = aux ([]::acc) more
		|   aux [] (ch :: more) = aux [[ch]] more
		|   aux (x::xs) (ch::more) = aux ((ch::x) :: xs) more;
	in	aux [] (explode name)
	end
);

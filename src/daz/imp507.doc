	let	val old = (snd o dest_ud_string o get_user_datum "-") cn_ud_key
			handle Fail _ => [];
		val new = 
			UD_String(fun_name, map (fn p => UD_String(p, [])) pars)
			:: (old drop wanted fun_name);
	in	set_user_datum(cn_ud_key, UD_String("", new))
	end
);
end;

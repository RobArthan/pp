and €do_stmt› (y as STNull : STMT) = (
) | do_stmt (y as STImplicitNull : STMT) = (
) | do_stmt (y as (STAssign x) : STMT) = (
) | do_stmt (y as (STSpecNoIvars x) : STMT) = (
	new_k_slot(#label x, RSSpecStatement, get_current_theory_name());

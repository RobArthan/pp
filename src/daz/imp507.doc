fun €do_compilation_unit› (context : CONTEXT_ITEM list) 
	(y as (CUPackageDeclaration (x as {name, ...})) : COMPILATION_UNIT)
	: unit = (
	set_cu(spec_script_desc name);
	(check_fail () do_declaration) (DPackageDeclaration x);
	(case s_lookup name (!pack_env) of
		Value (pack as {decl = {references, comp_unit, annotation, ...}, ...}) =>
			let	val decl' = {
					context = context,
					references = references,
					comp_unit = comp_unit,
					annotation = annotation};
			in	pack_env := s_enter name (package_decl (pack, decl')) (!pack_env)
			end
	|	NIl => ())
) | do_compilation_unit _ (y as (CUProperBody x)) = (
	case x of
	PBProcedure _ => set_cu(subprogram_desc (compilation_unit_name true y))
	| PBFunction _ => set_cu(subprogram_desc (compilation_unit_name true y))
	| PBPackage _ => set_cu(pack_body_desc (compilation_unit_name true y));
	(check_fail () do_declaration) (DProperBody x)
) | do_compilation_unit _ (y as (CUSubUnit {name, proper_body})) = (
	set_cu (subunit_desc (compilation_unit_name true y));

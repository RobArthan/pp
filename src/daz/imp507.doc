	do_stmt p;
	do_stmt q
) | do_stmt (y as (STCase {s, others, ...}) : STMT) = (
	map (do_stmt o #p) s;
	do_stmt others
) | do_stmt (y as (STLoop {t=Value till, stmt}) : STMT) = (
	new_scope_loop();
	till_pred till;
	do_stmt stmt;

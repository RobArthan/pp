				Value (cu' as (CUProperBody _) ) => (
					if	compilation_unit_name false cu' = pack_name
					then	[key]
					else	aux pack_name more
			) |	_ => aux pack_name more
		);
	in	case cu of
			CUPackageDeclaration _ => aux (compilation_unit_name false cu)
						(e_flatten (!state_db))
		|	_ =>  []

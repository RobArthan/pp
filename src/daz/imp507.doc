	let	val informal_fun : INFORMAL_FUN =
		{name=designator,
		formal_pars = map mk_param_spec formal_part,
		return_type = return};
	in	subunit_inf designator;
		new_scope_fun_inf designator;
		stub();
		fformal_part formal_part;
		inf_fun informal_fun
	end
)

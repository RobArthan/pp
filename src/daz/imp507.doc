fun €subs_formals_spec› (
	pars : PARAM_SPEC list,
	spec as {
		w,
		w0,
		pre = ZTmQuotation(z_pre, tyo1),
		post = ZTmQuotation(z_post, tyo2)} : SPEC,
	ys : ID list) : PARAM_SPEC list * SPEC = (

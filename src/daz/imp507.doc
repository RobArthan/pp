fun €make_module› (thy : Z_ID) : unit = (
	let	fun delete_vc n = ((delete_conjecture n; ())
						handle Fail _ => ());
		val _ = duplicate_theory (!script_name, thy)
			handle Fail _ => (
				lazy_open_theory (!script_name);
				fail "make_module" 507026
				[fn()=>thy, fn()=>thy]
			);
		val _ = set_cn_created();
		val _ = add_script_theory thy;
		fun make_adjustments () = (
			set_duplicate_keys (stub_theory_desc thy, !script_name);
			(map delete_vc o flat o map fst o get_conjectures) thy
		);
		val _ = do_in_theory thy make_adjustments ();
		val _ = lazy_open_theory (!script_name);
		val thy_level = current_level();
	in	(	
			update_user_datum cn_subunit_ud_key
				(UD_String(thy, [UD_Int (current_level(),
				[UD_Int (thy_level, [])])]));
			()
		)
		handle Fail _ => (
			lazy_open_theory (!script_name);
			fail "make_module" 507026
			[fn()=>thy, fn()=>thy]
		)
	end
);

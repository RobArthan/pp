=SML
local
fun €mk_function_info› 
	(formal : bool)
	(globals : Z_ID list)
	({name, formal_pars, par_names_defs, return_type} : INFORMAL_FUN)
	: Z_ID * ENV_INFO = (
	let 	fun get_tmarks {vars, tmark} = (
			map (fn v =>  tmark) vars
		);
		val ts = flat (map (get_tmarks o #var_decl) formal_pars);
		fun mk_par_info (t, (n, d)) = (
			{id = n,
			tmark = t,
			default = d}
		);
		val par_infos = map mk_par_info (combine ts par_names_defs)
			handle Fail _ => error "fun_name_par_names" 507078[];
		val zn = trans_id name;
	in	(zn,
		{tipe = Nil,
		canon_name = zn,
		info = 	EIEnvFunction {formal = formal,
			 deps = globals,
			 pars = par_infos,
			 return_tmark = return_type}})
	end
);
in
fun €add_function_to_dict›
	(formal : bool)
	(globals : Z_ID list)
	(dict : ENV_DICT, inf_fun : INFORMAL_FUN) : ENV_DICT = (
	let	val name_info = mk_function_info formal globals inf_fun;
	in	add_to_env_dict dict [name_info]
	end
);
fun €set_spark_function_info›

		val side = open_theory internal_name handle (Fail _) =>
			fail "create_prefixed_spec_from_internal_theory" 507038
			[fn () => ident];
		val (tys, const_thms) = internal_theory_types_and_const_thms internal_name;
		val conjectures = get_conjectures internal_name;
		val newids = new_ids package;
		val pinformal_funs = map (prefix_informal_fun ident newids)
					(#informal_funs package);
		val pfx_funs = pinformal_funs @ map (prefix_informal_fun ident newids)
			(map #informal_fun (#formal_funs package));
		val side = new_package_spec_theory context ident
				handle Fail _ => open_package_spec_theory ident;
		val (tysubs, paras1) = prefix_given_sets ident newids tys;
		val paras2 = prefix_const_thms ident tysubs newids const_thms;
		val paras3 = prefix_conjectures ident tysubs newids conjectures;
		val thychange1 = open_theory internal_name;
		val pformal_funs = map (prefix_formal_fun ident tysubs newids)
			(#formal_funs package);
		val thychange1 = open_package_spec_theory ident;
		val informal_fun_paras = map trans_informal_fun pinformal_funs;
		val dummy = (map store_para paras1;
			map store_para paras2;
			map store_para paras3;
			map set_par_names pfx_funs;
			map	(set_basic_decl_info
				   (prefix_package_id ident newids))
				(#consts_types package);
			map store_para informal_fun_paras);
		(* need to do other store_paras first to get right env *)
		val formal_fun_paras = map trans_formal_fun pformal_funs;
		val dummy1 = check_ff_xref pfx_funs formal_fun_paras;

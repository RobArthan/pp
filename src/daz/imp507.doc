fun €store_vcs› (	label : LABEL, vcs: TERM list, osl : SPECLAB OPT, 
		routes : ROUTE OPT list, vcg_ctxt : VC_GEN_CONTEXT ) 					: unit = (
	let	fun dummy_decl i = (
			if	i < 10000
			then	let	val tyn = "CN'DUMMY_TYPE" ^ string_of_int i;
				in	((	(icl'Kernel.icl'new_type(tyn, 0); ())
						handle Fail _ => dummy_decl (i+1));
					icl'Kernel.icl'delete_extension();
					()	)
				end	handle Fail _ => ()
			else	()
		);
		val side_effect = dummy_decl 0;
		val vc_names = map (store_vc_term label)  vcs;
	in	
		store_vc_context_and_origin(osl, vc_names, routes, 

) | do_stmt (y as STExit : STMT) = (
) | do_stmt (y as (STRet x) : STMT)  = (
) | do_stmt (y as (STProcNoIvars x) : STMT) = (
) | do_stmt (y as (STKSlot {label, content}) : STMT) = (

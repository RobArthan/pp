=SML
fun €type_of_tmark› (dict : ENV_DICT) (tmark : TMARK) : TYPE = (
	let	val set_ty =
			case env_of_env_dict dict (trans_id tmark) of
				Value {tipe = Value ty, info = EIEnvRecordType _, ...} => ty
			|	Value {tipe = Value ty, info = EIEnvOtherType, ...} => ty
			|	_ => fail "type_of_tmark" 507127 [fn _ => tmark];

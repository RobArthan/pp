fun €generate_spec_theory› (ident : ID) = (
	let	val side = open_package_body_theory ident;
		fun prefix n = trans_id (ident dot "")^n;
		fun mk_subs_pair (tm : TERM) : (TERM * TERM) = (
			let val (id, ty, _) = dest_z_gvar tm
				handle ex => reraise ex
					"generate_spec_theory";
			in
				(mk_z_gvar (prefix id, ty, []), tm)
			end
		);
		val consts = get_consts "-";
		val const_subs = map mk_subs_pair consts;
		fun do_const_subst tm = subst const_subs tm;
		
		val defs =
			map (fn (names, thm) =>
				(names, (	snd o dest_eq
						o snd o dest_app
						o snd o dest_thm) thm)
			) ((rev o get_defns) "-");
		val new_defs =
			map (fn (names, tm) =>
				(map prefix names, do_const_subst tm)) defs;

		fun do_abbdef_para (names, defn) = (
			map (fn n => AbbDefInfo (n, [], defn)) names
		);
		val abbdef_paras = flat (map do_abbdef_para new_defs);

		val axioms =
			map (fn (names, thm) =>
				let val (decls, tm) = (dest_±
						o snd o dest_app
						o snd o dest_thm) thm;
				in
					(names, decls, tm)
				end
			) ((rev o get_axioms) "-");
		fun axiom_subs  (names,decls,tm) = (
			let	val freevars = frees tm;
				val freevartab = map dest_z_lvar (frees tm);
				val definedhere = flat((map (fn n => freevartab
							drop (fn (s,_,_) => s <> n)))
							names);
			in
				map (fn (n, ty, fmls) =>
					(mk_z_lvar(prefix n, ty, fmls),
					mk_z_lvar(n, ty, fmls))) definedhere
			end);
		fun do_ax_subst ax tm = subst (axiom_subs ax) tm;
		val new_axioms =
			map (fn (ax as (names, decls, tm)) =>
				(	map prefix names,
					do_const_subst decls,
					do_ax_subst ax tm)) axioms;
		fun do_ax_para (names, decls, defn) = (
			map (fn n => AxDesInfo ([n], decls, Value defn, [])) names
		);
		val ax_paras = flat (map do_ax_para new_axioms);

		val paras = ax_paras @ abbdef_paras;
		
	in
		open_package_spec_theory ident;
		map update_theory_db_with_parainfo paras; ()
	end
);
=TEX
=SML
fun €populate_package_spec_theory› (with_context : ID list)
			(ident : ID) : unit = (
	let	val thy = get_current_theory_name();
		val parents_of_pack = (rev o get_parents) thy;
		val father = hd parents_of_pack;
		val parents_of_package_body = map pack_spec_name with_context;
	in

		open_theory father;
		new_package_body_theory ident
			handle Fail _ => open_package_body_theory ident;
		map new_parent parents_of_package_body handle _ => [];

		populate_theory_with_types_consts ident;
		populate_theory_with_functions ident;

		open_theory father;
		new_package_spec_theory ident
			handle Fail _ => open_package_spec_theory ident;
		map new_parent parents_of_pack handle _ => [];
		generate_spec_theory ident;

(*		open_theory father;
		force_delete_theory (pack_body_name ident)
			handle _ => ();
*)		open_theory thy

	end
);

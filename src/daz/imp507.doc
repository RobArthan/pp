fun Ûrenames_proc_commonİ
	({subprogram_specification = ss, name1 = pack, name2=old}
		: SUBPROGRAM_RENAMING)
	 : FORMAL_PROC OPT = (
	case ss of
		SSProcedure {name = new, ... } => (
		   case s_lookup pack (!pack_env) of
		   Value package => (
			let	val internal_name = (#zmod package);
				val formal_proc2  =
					find
						(#formal_procs package)
						(fn p => #name p = old);

				val (tys, _) =
					internal_theory_types_and_const_thms internal_name;
				val newids = new_ids package;
				val (tysubs, _) = prefix_given_sets pack newids tys;
				val oldthy = get_current_theory_name();
				val changethy = open_theory internal_name;
				val {name=pname, formal_ids=pformal_ids,
					 spec=pspec} : FORMAL_PROC = (
					prefix_formal_proc
						pack
						tysubs
						(new_ids package)
						formal_proc2)
					handle exn as (Fail _) =>
					(open_theory oldthy;
					 raise exn);
				val changethy2 = open_theory oldthy;
				val formal_proc3 =
						{name = new,
						formal_ids = pformal_ids,
						spec = pspec};
			in	Value formal_proc3
			end	handle (exn as Fail f) =>
				(if (area_of exn = "find")
				then comment "renames_proc" 507036
					[fn () => pack dot old]
				else comment "renames_proc" 507044
					[fn () => pack dot old,
					fn () => get_message f];
				Nil)
		) |	Nil => (comment "renames_proc" 507038 [fn()=>pack];
				Nil)
	) |	_ => Nil
);
=TEX

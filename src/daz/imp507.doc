	(fpA as {globals = gA, spec = {w = wA, w0 = w0A, pre = preA, post = postA}, ...}
		 : FORMAL_PROC)
	(fpB as {globals = gB, spec = {w = wB, w0 = w0B, pre = preB, post = postB}, ...}
		 : FORMAL_PROC)
		: bool = (
	let	val _ = set_current_ti_context(ti_context_of_formal_proc current_cn_env fpA);

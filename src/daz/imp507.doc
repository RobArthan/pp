val Ûjust_failÝ = fail "just_fail" 3064  [] handle complaint => complaint;

fun Ûtype_subst_typeÝ (subs : (string * string) list) (ty : TYPE) : TYPE = (
let
	(* bool param is interpreted as "anything changed?" *)
	fun aux1 aty = (
	let 	fun aux b [] = (
			if b then [] else raise just_fail
		) | aux b (a :: x) = (
			let val (a', b') = (aux1 a, true) 
				handle _ => (a, b)
			in
				(a' :: aux b' x)
			end
		);
	in
	case dest_simple_type aty of
		Vartype _ => raise just_fail
	|	Ctype(con, pars) => (
		   case rassoc5 subs con of
			(* constructor name changed *)
			Value con' => 
			   mk_ctype(con', 
				map (fn p => aux1 p 
					       handle _ => p) 
					pars)
			(* no constructor name change, so if pars also
			   unchanged then fail *)
		       | Nil => mk_ctype (con, aux false pars)
	)
	end);
in
	aux1 ty
end);


				map (fn p => aux1 p handle Fail _ => p) pars)
		end	handle Fail _ => (
			(* no constructor name change, so if pars also
			   unchanged then fail *)
			mk_ctype (con, aux false pars)
		)
	)
	end);
in
	aux1 ty

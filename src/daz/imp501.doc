=SML
fun €classify› (what : string) : CN_LEX_ITEM = (
	(case e_lookup (to_lower what) class_table of
		Value cl => cl
		|	Nil	=> (
				if	is_numericliteral what
				then	LCNumericLiteral
				else if is_characterliteral what
				then	LCCharacterLiteral
				else if is_primedid what
				then	LCPrimedIdentifier
				else	LCIdentifier
			),
		(CNText o get_internal_name) what)
);
=TEX
\subsection{Recognition of Delimiters}
=SML
fun €get_next_delimiter› (cs : string list) : string = (
	implode (find delimiter (fn chs => cs to (length chs - 1) = chs))
	handle ex => fail "CN-Parser" 501002 [fn()=>"invalid call of get_next_delimiter"]
);
=TEX
$rec\_delimiter$ returns an appropriately updated state if the input
begins with a delimiter symbol, if not it raises $Unrecognised$.
=SML
fun  €rec_delimiter› ( (cs, _) : LEX_STATE ) : LEX_STATE = (
	if next_is_delimiter cs
	then	let	val tk = get_next_delimiter cs;
        	in	(cs from size tk, Known tk)
		end
	else	raise Unrecognised
);
=TEX
\subsection{Recognition of Identifiers}

\subsection{Recognition of Alphanumeric Sequences}
=SML
fun €rec_identifier_aux› (st : LEX_STATE) : LEX_STATE = (
	let	fun aux st = (
			if next is_alnum st orelse next is_us st
			then aux (collect st)
			else st
		);
	in	if next is_alnum st orelse next is_us st
		then aux (collect st)
		else raise Unrecognised
	end
);
=TEX
=SML
fun €rec_identifier› (st : LEX_STATE) : LEX_STATE = (
	if next is_alpha st
	then	let	val (st', flag) = (rec_identifier_aux st, true)
				handle Unrecognised => (st, false);
		in	if flag
			then st'
			else raise Unrecognised
		end
	else raise Unrecognised
);
=TEX
\subsection{Recognition of Numbers}
=TEX
=SML
fun €rec_gen_integer› (f : string -> bool) (st : LEX_STATE) : LEX_STATE = (
	let	fun aux1 st = (
			if	next f (collect st)
			then	aux (collect st)
			else	raise Unrecognised
		)
		and aux st = (
			if	next f st
			then	aux (collect st)
			else if	next is_us st
			then	aux1 st
			else	st
		);
	in	if next f st
		then aux (collect st)
		else raise Unrecognised
	end
);
=TEX
=SML
val €rec_integer› = rec_gen_integer is_digit;
val €rec_based_integer› = rec_gen_integer is_alnum;
=TEX
=SML
fun €rec_exponent› (st : LEX_STATE) : LEX_STATE = (
	if	next is_e st
	then	let val st' = collect st;
		in
			if	next is_plusminus st'
			then	rec_integer (collect st')
			else	rec_integer st'
		end
	else	st
);
=TEX
=SML
fun €rec_based› (st : LEX_STATE) : LEX_STATE = (
let	val st' = rec_based_integer st;
	fun aux st =
		if	next is_hash st
		then	rec_exponent (collect st)
		else	raise Unrecognised;
in
	if	next is_dot st'
	then	((aux o rec_based_integer) (collect st')
			handle _ => st')
	else 	aux st'
end);
=TEX
=SML
fun €rec_numeric› (st : LEX_STATE) : LEX_STATE = (
let	val st' = rec_integer st;
	fun aux st =
		if	next is_hash st
		then	rec_exponent (collect st)
		else	raise Unrecognised;
in
	if	next is_dot st'
	then	((rec_exponent o rec_integer) (collect st')
			handle _ => st')
	else if	next is_e st'
	then	rec_exponent st'
	else if	next is_hash st'
	then	rec_based (collect st')
	else	st'
end);
=TEX
\subsection{Recognition of Keywords}
=SML
fun €rec_keyword› (st : LEX_STATE) : LEX_STATE = (
        let     fun aux (([], _) : LEX_STATE) = (
                        raise Unrecognised
                ) | aux st = (
                        if next is_percent st
                        then (collect st)
                        else aux (collect st)
                );
        in      if next is_percent st
                then aux (collect st)
                else raise Unrecognised
        end
);
=TEX
\subsection{Recognition of Character Literals}
=SML
fun €rec_characterliteral› (st : LEX_STATE) : LEX_STATE = (
	if next is_prime st
	then	let	val st' = collect (collect st);
		in
			if next is_prime st'
			then
				collect st'
			else
				raise Unrecognised
		end
	else
		raise Unrecognised
);
=TEX

\subsection{Recognition of Primed Identifiers}
=SML
fun €rec_primedid› (st : LEX_STATE) : LEX_STATE = (
	if next is_prime st
	then
		rec_identifier (collect st)
	else
		raise Unrecognised
);
=TEX

\subsection{Recognition of Lexemes}
Function $rec\_next\_token$ picks off the next token from the input
using the other recognisers.
=SML
fun €rec_next_token› (st : LEX_STATE) : LEX_STATE = (
	let	val st' = skip_space st;
	in	
		(((((((rec_identifier st))
		handle Unrecognised =>
			(rec_characterliteral st))
		handle Unrecognised =>
			(rec_primedid st))
		handle Unrecognised =>
			(rec_delimiter st))
		handle Unrecognised =>
			(rec_numeric st))
		handle Unrecognised =>
			(rec_keyword st))
		handle Unrecognised =>
			(fst st, Unknown)
	end
);
=TEX
\subsection{Lexical Analyser}
=SML
val z_lex1 = (rev o tl o rev o ZLex.z_lex);
=TEX
=SML
fun €lookahead› (terml : string list) (old : INPUT list, (ip::rest) : INPUT list)
		: (INPUT list * string OPT * INPUT list) = (
	case ip of
	Lex.Text txt => (
		let	fun aux (sold : string list, (c::srest) : string list) = (
				if c mem terml
				then
					(sold, Value c, srest)
				else
					aux (sold@[c], srest)
			) | aux (sold, snew) = (sold, Nil, snew);
			val (s1, flg, s2) = aux ([], explode txt);
		in
			(old@[Lex.Text (implode s1)], flg, (Lex.Text (implode s2))::rest)
		end
	) | _ => (
		lookahead terml (old@[ip], rest)
	)
) | lookahead _ (old, new) = (old, Nil, new);
=TEX
=SML
fun €spark_ss1› (iplist : INPUT list) : CN_LEX_ITEM list = (
let	val (left, found, right) = lookahead ["[", "{"] ([], iplist);
	val left_cxt = (LCZ, CNZ (ZLex.z_lex left));
in
	case found of
	Value (sym as "[") => (
		left_cxt::classify sym::spark_ss2 0 ("[","]") [] right
	)|Value (sym (* must be "{" *)) => (
		left_cxt::classify sym::spark_ss2 0 ("{","}") [] right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_ss2› (n : int) (brks as (lbrk :string, rbrk : string))
		(lctxt : INPUT list) (iplist : INPUT list) : CN_LEX_ITEM list = (
let	val (left, found, right) = lookahead [lbrk, rbrk] ([], iplist);
	val left' = lctxt@left;
	fun flatten_input (Lex.Text s1::Lex.Text s2::rest) = (
		flatten_input (Lex.Text (s1^s2)::rest)
	) | flatten_input (ip::rest) = (
		ip::flatten_input rest
	) | flatten_input [] = [];
in
	case found of
	Nil => (
		(LCZ, CNZ (ZLex.z_lex (flatten_input left')))::spark_lex right
	)| Value sym => (
		if sym = rbrk
		then	if n = 0
			then
				(LCZ, CNZ (ZLex.z_lex (flatten_input left')))
					::classify sym
					::spark_lex right
			else
				spark_ss2 (n - 1) brks (left'@[Lex.Text sym]) right 
		else	(* sym = lbrk *)
				spark_ss2 (n + 1) brks (left'@[Lex.Text sym]) right 
	)
end)
=TEX
=SML
and €spark_lstrachey› (iplist : INPUT list) : CN_LEX_ITEM list = (
let	val (left, found, right) = lookahead ["˝"] ([], iplist);
	val left_cxt = (LCZ, CNZ (ZLex.z_lex left));
in
	case found of
	Value sym => (
		left_cxt::classify sym::spark_lex right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_con› (iplist : INPUT list) : CN_LEX_ITEM list = (
let	val (left, found, right) = lookahead ["∑"] ([], iplist);
	val left_cxt = (LCZ, CNZ (ZLex.z_lex left));
in
	case found of
	Value sym => (
		left_cxt::classify sym::spark_lex right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_kslot› (iplist : INPUT list) : CN_LEX_ITEM list = (
let	val (left, found, right) = lookahead ["¢"] ([], iplist);
	val left_cxt = (LCKSlot, CNKSlot left);
in
	case found of
	Value sym => (
		left_cxt::classify sym::spark_lex right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_xtext› (slist : string list) (rest : INPUT list) : CN_LEX_ITEM list  = (
let	val st = skip_space (slist, Unknown);
in
	case skip_space st of
	([], _) => spark_lex rest
	| other => (
		case skip_space(rec_next_token other) of
		st' as (srest, Known s) => (
			let	val res as (class, _) = classify s;
			in case class of
				LCGrkDelta => (
					res
					::(spark_ss1 (Lex.Text (implode srest)::rest))
				)|LCLStrachey => (
					res
					::(spark_lstrachey (Lex.Text (implode srest)::rest))
				)|LCCon => (
					res
					::(spark_con (Lex.Text (implode srest)::rest))
				)|LCLChevron => (
					res
					::(spark_kslot (Lex.Text (implode srest)::rest))
				)|LCCharacterLiteral => (
					(class, CNString ((implode o tl o rev
					o tl o explode) s))::spark_xtext srest rest
				)|_ =>
					res::spark_xtext srest rest

			end
		)| (_, Unknown) =>
			fail "CN-Parser" 501001 [fn() => implode slist]
	)
end)
=TEX
=SML
and €spark_string› (s : string) (rest : INPUT list) : CN_LEX_ITEM list = (
	(LCStringLiteral, CNString s) :: spark_lex rest
)

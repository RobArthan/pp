fun €classify› (what : string) : SPARK_LEX_CLASS = (
	case e_lookup (to_lower what) class_table of
		Value cl => cl
		|	Nil	=> (
				if	is_all_decimal what
				then	NumericLiteral
				else if is_primedid what
				then	PrimedIdentifier
				else	Identifier
			)
);
=TEX
\subsection{Recognition of Delimiters}
=SML
fun €get_next_delimiter› (cs : string list) : string = (
	implode (find delimiter (fn chs => cs to (length chs - 1) = chs))
	handle ex => fail "CN-Parser" 501201 [fn()=>"invalid call of get_next_delimiter"]
);
=TEX
$rec\_delimiter$ returns an appropriately updated state if the input
begins with a delimiter symbol, if not it raises $Unrecognised$.
=SML
fun  €rec_delimiter› ( (cs, _) : LEX_STATE ) : LEX_STATE = (
	if next_is_delimiter cs
	then	let	val tk = get_next_delimiter cs;
        	in	(cs from size tk, Known tk)
		end
	else	raise Unrecognised
);
=TEX
\subsection{Recognition of Identifiers}

\subsection{Recognition of Alphanumeric Sequences}
=SML
fun €rec_identifier_aux› (st : LEX_STATE) : LEX_STATE = (
	let	fun aux st = (
			if next is_alnum st orelse next is_us st
			then aux (collect st)
			else st
		);
	in	if next is_alnum st orelse next is_us st
		then aux (collect st)
		else raise Unrecognised
	end
);
=TEX
=SML
fun €rec_identifier› (st : LEX_STATE) : LEX_STATE = (
	if next is_alpha st
	then	let	val (st', flag) = (rec_identifier_aux st, true)
				handle Unrecognised => (st, false);
		in	if flag
			then	(* if next is_tilde st'
				then (collect st')
				else if next is_dot st'
				then rec_identifier_aux (collect st')
				else *) st'
			else raise Unrecognised
		end
	else raise Unrecognised
);
=TEX
\subsection{Recognition of Numbers}
=TEX
The following is a simplification of numbers used in SPARK and will be
updated later.
=SML
fun €rec_number› (st : LEX_STATE) : LEX_STATE = (
	let	fun aux st = (
			if next is_digit st
			then aux (collect st)
			else st
		);
	in	if next is_digit st
		then aux (collect st)
		else raise Unrecognised
	end
);
=TEX
\subsection{Recognition of Keywords}
=SML
fun €rec_keyword› (st : LEX_STATE) : LEX_STATE = (
        let     fun aux (([], _) : LEX_STATE) = (
                        raise Unrecognised
                ) | aux st = (
                        if next is_percent st
                        then (collect st)
                        else aux (collect st)
                );
        in      if next is_percent st
                then aux (collect st)
                else raise Unrecognised
        end
);
=TEX
\subsection{Recognition of Primed Identifiers}
=SML
fun €rec_primedid› (st : LEX_STATE) : LEX_STATE = (
	if next is_prime st
	then
		rec_identifier (collect st)
	else
		raise Unrecognised
);

=TEX

\subsection{Recognition of Lexemes}
Function $rec\_next\_token$ picks off the next token from the input
using the other recognisers.
=SML
fun €rec_next_token› (st : LEX_STATE) : LEX_STATE = (
	let	val st' = skip_space st;
	in	
		((((((rec_identifier st))
		handle Unrecognised =>
			(rec_number st))
		handle Unrecognised =>
			(rec_primedid st))
		handle Unrecognised =>
			(rec_keyword st))
		handle Unrecognised =>
			(rec_delimiter st))
		handle Unrecognised =>
			(fst st, Unknown)
	end
);
=TEX
\subsection{Lexical Analyser}
=SML
val z_lex1 = (rev o tl o rev o ZLex.z_lex);
=TEX
=SML
fun €lookahead› (terml : string list) (old : INPUT list, (ip::rest) : INPUT list)
		: (INPUT list * string OPT * INPUT list) = (
	case ip of
	Lex.Text txt => (
		let	fun aux (sold : string list, (c::srest) : string list) = (
				if c mem terml
				then
					(sold, Value c, srest)
				else
					aux (sold@[c], srest)
			) | aux (sold, snew) = (sold, Nil, snew);
			val (s1, flg, s2) = aux ([], explode txt);
		in
			(old@[Lex.Text (implode s1)], flg, (Lex.Text (implode s2))::rest)
		end
	) | _ => (
		lookahead terml (old@[ip], rest)
	)
) | lookahead _ (old, new) = (old, Nil, new);
=TEX
=SML
fun €spark_ss1› (iplist : INPUT list) : LEX_ITEM list = (
let	val (left, found, right) = lookahead ["[", "{"] ([], iplist);
	val left_cxt = (Z, SPARKZ (ZLex.z_lex left));
in
	case found of
	Value (sym as "[") => (
		left_cxt::(classify sym, SPARKText sym)::spark_ss2 0 ("[","]") [] right
	)|Value (sym (* must be "{" *)) => (
		left_cxt::(classify sym, SPARKText sym)::spark_ss2 0 ("{","}") [] right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_ss2› (n : int) (brks as (lbrk :string, rbrk : string))
		(lctxt : INPUT list) (iplist : INPUT list) : LEX_ITEM list = (
let	val (left, found, right) = lookahead [lbrk, rbrk] ([], iplist);
	val left' = lctxt@left;
	fun flatten_input (Lex.Text s1::Lex.Text s2::rest) = (
		flatten_input (Lex.Text (s1^s2)::rest)
	) | flatten_input (ip::rest) = (
		ip::flatten_input rest
	) | flatten_input [] = [];
in
	case found of
	Nil => (
		(Z, SPARKZ (ZLex.z_lex (flatten_input left')))::spark_lex right
	)| Value sym => (
		if sym = rbrk
		then	if n = 0
			then
				(Z, SPARKZ (ZLex.z_lex (flatten_input left')))
					::(classify sym, SPARKText sym)
					::spark_lex right
			else
				spark_ss2 (n - 1) brks (left'@[Lex.Text sym]) right 
		else	(* sym = lbrk *)
				spark_ss2 (n + 1) brks (left'@[Lex.Text sym]) right 
	)
end)
=TEX
=SML
and €spark_lstrachey› (iplist : INPUT list) : LEX_ITEM list = (
let	val (left, found, right) = lookahead ["˝"] ([], iplist);
	val left_cxt = (Z, SPARKZ (ZLex.z_lex left));
in
	case found of
	Value sym => (
		left_cxt::(classify sym, SPARKText sym)::spark_lex right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_con› (iplist : INPUT list) : LEX_ITEM list = (
let	val (left, found, right) = lookahead ["∑"] ([], iplist);
	val left_cxt = (Z, SPARKZ (ZLex.z_lex left));
in
	case found of
	Value sym => (
		left_cxt::(classify sym, SPARKText sym)::spark_lex right
	)| Nil => (
		left_cxt::spark_lex right
	)
end)
=TEX
=SML
and €spark_kslot› (iplist : INPUT list) : LEX_ITEM list = (
let	val (left, found, right) = lookahead ["¢"] ([], iplist);
	val left_cxt = (KSlot, SPARKKSlot (left@[Lex.Text "¢"]));
in
	case found of
	Value sym => (
		(KSlot, SPARKKSlot (left@[Lex.Text "¢"]))::spark_lex right
	)| Nil => (
		(KSlot, SPARKKSlot (left))::spark_lex right
	)
end)
=TEX
=SML
and €spark_xtext› (slist : string list) (rest : INPUT list) : LEX_ITEM list  = (
let	val st = skip_space (slist, Unknown);
in
	case skip_space st of
	([], _) => []
	| other => (
		case skip_space(rec_next_token other) of
		st' as (srest, Known s) => (
			let	val class = classify s;
			in case class of
				GrkDelta => (
					(class, SPARKText s)
					::(spark_ss1 (Lex.Text (implode srest)::rest))
				)|LStrachey => (
					(class, SPARKText s)
					::(spark_lstrachey (Lex.Text (implode srest)::rest))
				)|Con => (
					(class, SPARKText s)
					::(spark_con (Lex.Text (implode srest)::rest))
				)|LChevron => (
					(spark_kslot (Lex.Text (implode (s::srest))::rest))
				)|_ =>
					(class, SPARKText s)::spark_xtext srest rest

			end
		)| (_, Unknown) =>
			fail "CN-Parser" 501011 [fn() => implode slist]
	)
end)
=TEX
=SML
and €spark_string› (s : string) (rest : INPUT list) : LEX_ITEM list = (
	(StringLiteral, SPARKString s) :: spark_lex rest
)
=TEX
=SML
and €spark_lex› ((ip::more) : INPUT list) : LEX_ITEM list = (
	case ip of
		Lex.Text s => (
			spark_xtext (explode s) more
	) |	Lex.String s => (
			spark_string s more
	) |	Lex.Char s => (
			fail "CN-Parser" 501011  [fn () => s]
	) |	Lex.Type ty => (
			fail "CN-Parser" 501011  [fn () => string_of_type ty]
	) |	Lex.Term tm => (
			fail "CN-Parser" 501011  [fn () => "Antiquotation"]
	) |	Lex.Separator s => (
			fail "CN-Parser" 501011  [fn () => s]
	) |	Lex.Error n => (fail "lexical analyser" 15006 [fn () => string_of_int n])
) | spark_lex _ = [];
=TEX
=SML
fun €cn_lex› (classify_label : LEX_ITEM list -> LEX_ITEM list) (inp : INPUT list) 
		: LEX_ITEM list = (
	(classify_label o spark_lex) inp
);
=TEX
